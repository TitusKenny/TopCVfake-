@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout-AboutUs.cshtml";
}
<!doctype html>
<html lang="vi">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Nunito:400,700&display=swap" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Content/starter/style-starter.css">
</head>
<body>
    <!-- about breadcrumb -->
    <section class="w3l-breadcrumb">
        <div class="breadcrumb-bg breadcrumb-bg-about py-5">
            <div class="container pt-lg-5 pt-3 p-lg-4 pb-3">
                <h2 class="title mt-5 pt-lg-5 pt-sm-3">Thông tin về công ty</h2>
                <ul class="breadcrumbs-custom-path pb-sm-5 pb-4 mt-2 text-center mb-5">
                    <li><a href="@Url.Action("Index","User")">Home</a></li>
                    <li class="active"> / About </li>
                </ul>
            </div>
        </div>
        <div class="waveWrapper waveAnimation">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none">
                <path d="M-5.07,73.52 C149.99,150.00 299.66,-102.13 500.00,49.98 L500.00,150.00 L0.00,150.00 Z" style="stroke: none;"></path>
            </svg>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <section id="about" class="home-services pt-lg-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="box-wrap">
                        <div class="box-wrap-grid">
                            <div class="icon">
                                <span class="fa fa-graduation-cap"></span>
                            </div>
                            <div class="info">
                                <h4>Nhiệm vụ</h4>
                                <h4>của chúng tôi</h4>
                            </div>
                        </div>
                        <p class="mt-4">
                            Nếu bạn đang tìm kiếm
                            một công việc ổn định và đúng ngành.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 mt-md-0 mt-4">
                    <div class="box-wrap">
                        <div class="box-wrap-grid">
                            <div class="icon">
                                <span class="fa fa-book"></span>
                            </div>
                            <div class="info">
                                <h4>Tầm nhìn</h4>
                                <h4>của chúng tôi</h4>
                            </div>
                        </div>
                        <p class="mt-4">
                            Nhằm đáp ứng nhu cầu
                            của các công ty tập đoàn và nhân lực.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 mt-lg-0 mt-4">
                    <div class="box-wrap">
                        <div class="box-wrap-grid">
                            <div class="icon">
                                <span class="fa fa-trophy"></span>
                            </div>
                            <div class="info">
                                <h4>Điểm đến</h4>
                                <h4>của chúng tôi</h4>
                            </div>
                        </div>
                        <p class="mt-4">
                            Tăng khả năng ổn định
                            công việc và nguồn nhân lực.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="w3l-aboutblock1 py-5" id="about">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="row">
                <div class="col-lg-6 align-self">
                    <span class="title-small mb-2">Về công ty</span>
                    <h3 class="title-big mx-0">Chào mừng đến với FCV - Tìm kiếm công việc dễ dàng</h3>
                    <p class="mt-lg-4 mt-3">
                        Công ty được thành lập với thâm niên hơn 5 năm.
                        Nhằm cung ứng các nguồn nhân lực và ổn định xã hội.
                        Tạo cơ hội cho nhiều kỹ sư.
                    </p>
                    <p class="mt-3 mb-lg-5">
                        Tham gia với chúng tôi để thành lập và hướng đến tương lai
                        tốt hơn , ổn định , xã hội phát triển giàu mạnh.
                    </p>
                </div>
                <div class="col-lg-6 left-wthree-img mt-lg-0 mt-sm-5 mt-4">
                    <img src="~/Content/starter/images/about.jpg" alt="" class="img-fluid radius-image">
                </div>
            </div>
        </div>
    </section>
    <section class="w3l-servicesblock w3l-servicesblock1 py-5" id="progress">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="row">
                <div class="col-lg-6 align-self pr-lg-4">
                    <div class="progress-info info1">
                        <h6 class="progress-tittle">Nộp đơn thành công <span class="">80%</span></h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 80%"
                                 aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    <div class="progress-info info2">
                        <h6 class="progress-tittle">
                            Tỉ lệ nộp đơn <span class="">95%</span>
                        </h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 95%"
                                 aria-valuenow="95" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    <div class="progress-info info3">
                        <h6 class="progress-tittle">Tỉ lệ công ty tuyển dụng <span class="">90%</span></h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 90%"
                                 aria-valuenow="95" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    <div class="progress-info info4">
                        <h6 class="progress-tittle">Tỉ lệ công ty nhận đúng <span class="">75%</span></h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 75%"
                                 aria-valuenow="95" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    <div class="progress-info info2 mb-0">
                        <h6 class="progress-tittle">Tỉ lệ công việc ổn định <span class="">95%</span></h6>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 95%"
                                 aria-valuenow="95" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 pl-lg-4">
                    <span class="title-small mb-2">Thanh tỉ lệ</span>
                    <h3 class="title-big">  Những thông tin bạn đang tìm hiểu</h3>
                    <p class="mt-md-4 mt-3">
                        Đây là thông số thực tế dựa trên thống kê của tập đoàn.
                        Các thông số hiện thị kết quả , biểu đồ tỷ lệ tìm kiếm thành công
                        của các tập đoàn, công ty và những người nộp đơn
                        Tỉ lệ tham gia cao hơn ,tốt hơn , nâng cao chất lượng cuộc sống
                    </p>
                    <a href="#url" class="btn btn-primary btn-style mt-md-5 mt-4">Get started now</a>
                </div>
            </div>
        </div>
    </section>
    <section class="w3l-block py-5" id="">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-6 about-right-faq align-self">
                    <span class="title-small mb-2">Bắt đầu tìm kiếm công việc</span>
                    <h3 class="title-big mx-0"> Tìm kiếm công việc phù hợp với ngành và bản thân</h3>
                    <p class="mt-lg-4 mt-3 mb-lg-5 mb-4">
                        Để có thể nâng cao khả năng làm việc của 1 cá nhân , tổ chức
                        người tham gia cũng như công ty cần phải có môi trường làm việc tốt
                        vì thế đúng người , đúng nghề , đúng việc vô cùng cần thiết.
                    </p>
                    <div class="two-grids mt-md-0 mt-md-5 mt-4">
                        <div class="grids_info">
                            <h4>Chứng nhận của công ty</h4>
                            <p class="">
                                Công ty đạt chuẩn quốc gia
                                Hạn chế được nguồn nhân lực , thất nghiệp.
                            </p>
                        </div>
                        <div class="grids_info">
                            <h4>Lợi ích khi tham gia</h4>
                            <p class="">
                                Tìm hiểu về các công ty
                                công việc ổn định ,lâu dài.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-6 left-wthree-img mt-lg-0 mt-sm-5 mt-4">
                    <img src="~/Content/starter/images/about1.jpg" alt="" class="img-fluid radius-image">
                </div>
                <div class="col-lg-3 col-6  left-wthree-img mt-lg-0 mt-sm-5 mt-4">
                    <img src="~/Content/starter/images/about2.jpg" alt="" class="img-fluid radius-image">
                </div>
            </div>
        </div>
    </section>
    <!-- stats -->
    <section class="w3l-stats py-5" id="stats">
        <div class="gallery-inner container py-lg-5 py-md-4">
            <span class="title-small text-center mb-1">Thành tựu</span>
            <h3 class="title-big text-center mb-5">Đúng việc,đúng nghề</h3>
            <div class="row stats-con">
                <div class="col-md-3 col-6 stats_info counter_grid">
                    <p class="counter">3000 </p>
                    <span class="plus">+</span><br>
                    <h3>Người nộp đơn</h3>
                </div>
                <div class="col-md-3 col-6 stats_info counter_grid1">
                    <p class="counter">1000</p>
                    <span class="plus">+</span><br>
                    <h3>Công ty tham gia</h3>
                </div>
                <div class="col-md-3 col-6 stats_info counter_grid mt-md-0 mt-4">
                    <p class="counter">2500 </p>
                    <span class="plus">+</span><br>
                    <h3>Người được nhận </h3>
                </div>
                <div class="col-md-3 col-6 stats_info counter_grid2 mt-md-0 mt-4">
                    <p class="counter">875 </p>
                    <span class="plus">+</span><br>
                    <h3>Công ty nhận đúng </h3>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Content/starter/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/starter/js/jquery.countup.js"></script>
    <script>
        $('.counter').countUp();
    </script>
    <!-- //stats number counter -->
    <script>
        $(function () {
            $('.navbar-toggler').click(function () {
                $('body').toggleClass('noscroll');
            })
        });</script>
    <!-- disable body scroll which navbar is in active -->
    <!--/MENU-JS-->
    <script>
        $(window).on("scroll", function () {
            var scroll = $(window).scrollTop();

            if (scroll >= 80) {
                $("#site-header").addClass("nav-fixed");
            } else {
                $("#site-header").removeClass("nav-fixed");
            }
        });

        //Main navigation Active Class Add Remove
        $(".navbar-toggler").on("click", function () {
            $("header").toggleClass("active");
        });
        $(document).on("ready", function () {
            if ($(window).width() > 991) {
                $("header").removeClass("active");
            }
            $(window).on("resize", function () {
                if ($(window).width() > 991) {
                    $("header").removeClass("active");
                }
            });
        });</script>




</body>

</html>