@model TopCvFake.Models.Profile

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<!-- Template CSS -->
<link rel="stylesheet" href="~/Content/starter/style-starter.css">
<table align="center">
    <h2 style="text-align:center">Chỉnh sửa thông tin</h2>
    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaProfile)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <tr style="height:40px">
            <td>
                Chức vụ ứng tuyển:
            </td>
            <td style=" width: 350px;  padding: 5px; padding-left: 15px;">
                @Html.EditorFor(model => model.ChucVuUngTuyen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChucVuUngTuyen, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr style="height:40px">
            <td>
                Hình:
            </td>
            <td style=" width: 350px;  padding: 5px; padding-left: 15px;">
                <img height="100" width="100" src="/@Model.HinhCV" />
                <input type="file" name="fileUpload" src="/@Model.HinhCV" />
                @Html.ValidationMessageFor(model => model.HinhCV, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr style="height:40px">
            <td>
                Kinh nghiệm làm việc:
            </td>
            <td style=" width: 350px;  padding: 5px; padding-left: 15px;">
                @Html.EditorFor(model => model.KinhNghiem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KinhNghiem, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr style="height:40px">
            <td>
                Học vấn
            </td>
            <td style=" width: 350px;  padding: 5px; padding-left: 15px;">
                @Html.EditorFor(model => model.HocVan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HocVan, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Ngôn ngữ:
            </td>
            <td style=" width: 350px;  padding: 5px; padding-left: 15px;">
                @Html.EditorFor(model => model.NgonNgu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgonNgu, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Lưu" style="color:black" />
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to List", "CV")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
