@model TopCvFake.Models.User

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Details/Details.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/starter/style-starter.css">
<script src="~/Content/Details/Details.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="body1">
    <div class='container1'>
        <div class='window'>
            <div class='main-content'>
                <h2>Thông tin cá nhân</h2>
                <p>Họ tên: @Html.DisplayFor(model => model.HoTen)</p>
                <p>Điện thoại: @Html.DisplayFor(model => model.DienThoai) </p>
                <p> Địa chỉ: @Html.DisplayFor(model => model.DiaChi)</p>
                <p> Email: @Html.DisplayFor(model => model.Email)</p>
                <p> Mật khẩu: @Html.DisplayFor(model => model.MatKhau)</p>
                <p> Ngày sinh: @Html.DisplayFor(model => model.NgaySinh)</p>
                <div></div>
                <div></div>
                <div class='divider'></div>

                <div class='purchase-info'>
                    <a class="btn button" href="@Url.Action("EditProfileUser", "User", new { id= Model.MaUser})">Chỉnh sửa thông tin</a>
                    <a class="btn button" href="@Url.Action("Index","User")">Trở về nhà chính</a>
                </div>
                <div></div>
                <div></div>
                <div style="text-align:center">
                    @Html.ActionLink("Danh sách đơn xin việc", "CV")
                </div>
            </div>
        </div>
    </div>
</div>
